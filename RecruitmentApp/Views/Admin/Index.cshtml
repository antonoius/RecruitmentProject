                        <li class="nav-item">
                            <a href="~/Admin/HRDirectorCreation" class="nav-link">Add HR Director</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/CompanyCreation" class="nav-link">Add Company</a>
                        </li>
                    </ul>
                       
