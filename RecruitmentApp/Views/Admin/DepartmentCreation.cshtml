                var depName = $("#txt1").val();
                var obj = { "compId": compId, "depName": depName };
                $.ajax({
                    type: "post",
                    data: JSON.stringify(obj),
                    contentType: "application/json",
                    url: "/admin/DepartmentCreationService?compId=" + compId + "&depName=" + depName + "",
                    success: function (res) {
                        
