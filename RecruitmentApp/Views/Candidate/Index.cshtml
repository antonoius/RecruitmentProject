    <script>
        $(function () {

            $("#tbody1").on("click", ".btn.btn-info.btn-sm.edt", function () {
                //alert("ana henaa");
                var candidateId = '@ViewBag.id';
                var jobId = $(this).parent().prev().prev().prev().find("a").text();
                var obj = { "candId": candidateId, "JobId": jobId };
                $.ajax({
                    type: "post",
                    data: JSON.stringify(obj),
                    contentType: "application/json",
                    url: "/candidate/CreateApplication?id=" + candidateId + "&jobId=" + jobId,
                    success: function (res) {
                        alert("Job applied!");
                    }

                });
                
            });
            $("#tbody1").on("click", ".btn.btn-default", function () {
                var jobId = $(this).parent().prev().prev().prev().find("a").text();
                var obj = { "jobId": jobId };
                $.ajax({
                    type: "get",
                    url: "/candidate/GetJobDescribtion?id=" + jobId,
                    success: function (res) {
                       
                        $("#pAlert").text(res);
                    }
                });
            });
        });
    </script>
    

